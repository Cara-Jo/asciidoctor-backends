- case @style
- when 'qanda'
  %div{:id=>@id, :class=>['qlist', 'qanda', role]}
    - if title?
      .title=title
    %ol
      - content.each do |q, a|
        %li
          %p<
            %em=q.text
          - unless a.nil?
            - if a.text?
              %p<=a.text
            - if a.blocks?
              =a.content.chomp
- when 'horizontal'
  %div{:id=>@id, :class=>['hdlist', role]}
    - if title?
      .title=title
    %table
      - if (attr? :labelwidth) || (attr? :itemwidth)
        %colgroup
          %col{:style=>("width:#{attr :labelwidth}%;" if (attr? :labelwidth))}
          %col{:style=>("width:#{attr :itemwidth}%;" if (attr? :itemwidth))}
      - content.each do |dt, dd|
        %tr
          %td{:class=>['hdlist1', ('strong' if (option? 'strong'))]}
            =dt.text
            %br
          %td.hdlist2
            - unless dd.nil?
              - if dd.text?
                %p<=dd.text
              - if dd.blocks?
                =dd.content.chomp
- else
  %div{:id=>@id, :class=>['dlist', @style, role]}
    - if title?
      .title=title
    %dl
      - content.each do |dt, dd|
        %dt{:class=>('hdlist1' unless @style)}<
          =dt.text
        - unless dd.nil?
          %dd
            - if dd.text?
              %p<=dd.text
            - if dd.blocks?
              =dd.content.chomp
