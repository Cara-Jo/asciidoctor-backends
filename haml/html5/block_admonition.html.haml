%div{:id=>@id, :class=>['admonitionblock', (attr :name), (attr :role)]}
  %table
    %tr
      %td.icon
        - if attr? :icons
          - if attr? :icons, 'awesome'
            %i{:class=>"icon-#{attr :name}"}
          - else
            %img{:src=>icon_uri(attr :name), :alt=>(attr :caption)}
        - else
          .title=attr :caption
      %td.content
        - if title?
          .title=title
        =content.chomp
