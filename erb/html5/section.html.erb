<%#encoding:UTF-8%><%
if @level.zero? %><h1<%= @id && %( id="#{@id}") %>><%= title %></h1>
<%= content %><%
else
  title_html = captioned_title
  title_html = %(<a name="#{@id}" class="anchor" href="##{@id}">#{title_html}</a>) if @document.attr? :sectanchors
  title_html = %(#{sectnum} #{title_html}) if !@special && (@document.attr? 'numbered') && @level < 4
%><div<%= %( class="sect#{@level}#{attr?('role') ? " #{attr 'role'}" : nil}") %>>
<%= %(<h#{@level + 1}) %><%= @id && %( id="#{@id}") %>><%= title_html %><%= %(</h#{@level + 1}>) %><%
  if @level == 1 %>
<div class="sectionbody">
<%= content %>
</div><%
  else %>
<%= content %><%
  end %>
</div><%
end %>
