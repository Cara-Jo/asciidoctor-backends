.colist id=@id class=[@style,role]
  - if title?
    .title=title
  - if @document.attr? :icons
    table
      - content.each_with_index do |item, i|
        - num = i + 1
        tr
          td
            - if @document.attr? :icons, 'font'
              i.conum=num
            - else
              img src=icon_uri("callouts/#{num}") alt=num
          td=item.text
  - else
    ol
      - content.each do |item|
        li: p=item.text
